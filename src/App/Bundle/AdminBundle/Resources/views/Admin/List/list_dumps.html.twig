{% extends 'AppAdminBundle:Admin:layout.html.twig' %}

{% block sonata_admin_content %}

    <div class="row">
        <div class="col-xs-12 col-md-12 sonata-filters-box">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="pull-right">
                        <a class="btn btn-small btn-success" href="{{ path('app_admin_bundle_dump_create') }}">Экспорт</a>
                    </div>
                    <table class="table table-bordered table-striped sonata-ba-list">
                        <tbody>
                        {% for file in files %}
                            <tr>
                                <td>{{ file.name }}</td>
                                <td>{{ file.path }}</td>
                                <td>
                                    <a href="{{ path('app_admin_bundle_dump_import', { "fileName": file.name }) }}">Импорт</a>
                                </td>
                                <td>
                                    <a target="_blank" href="{{ path('app_admin_bundle_dump_download', { "fileName": file.name }) }}">Скачать</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
