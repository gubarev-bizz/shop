{% if sliders %}
    <div class="carousel slide " id="carousel-example-captions" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for key, slider in sliders %}
                {% if loop.index == 1 %}
                    <li data-target="#carousel-example-captions" data-slide-to="{{ key }}" class="active"></li>
                {% else %}
                    <li data-target="#carousel-example-captions" data-slide-to="{{ key }}" class=""></li>
                {% endif %}
            {% endfor %}
        </ol>
        <div class="carousel-inner" role="listbox">
            {% for key, slider in sliders %}
                {% if loop.index == 1 %}
                    <div class="item active">
                        <img
                            alt=""
                            src="{{ getImage(slider.imageName, 'article') | imagine_filter('slider_main') }}"
                        >
                        <div class="carousel-caption">
                            <h3>
                                <a href="{{ slider.link }}">
                                    {{ slider.title }}
                                </a>
                            </h3>
                            {#<p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>#}
                        </div>
                    </div>
                {% else %}
                    <div class="item left">
                        <img alt="" src="{{ getImage(slider.imageName, 'article') | imagine_filter('slider_main') }}" >
                        <div class="carousel-caption">
                            <h3><a href="{{ slider.link }}">{{ slider.title }}</a></h3>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <a href="#carousel-example-captions" class="left carousel-control" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a href="#carousel-example-captions" class="right carousel-control" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endif %}