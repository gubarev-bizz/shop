{% if categories is defined %}
    {% for category in categories %}
        <div class="col-md-6 col-xs-6 stock-block">
            <a href="{{ path('app_core_bundle_category_item', {categoryId: category.id}) }}" class="">
                <img
                    alt="100%x180"
                    data-src="holder.js/100%x180"
                    style="height: 180px; width: 100%; display: block;"
                    src="{{ getImage(category.imageName, 'category') }}"
                    data-holder-rendered="true"
                >
            </a>
            <a href="{{ path('app_core_bundle_category_item', {categoryId: category.id}) }}">{{ category.title }}</a>
        </div>
    {% endfor %}
{% endif %}