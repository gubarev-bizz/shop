{% if news is not null %}
    <h2 class="block-title">{{ 'News'|trans }}</h2>
    <div>
        {% if news.imageName is not null %}
            <img
                class="img-responsive"
                src="{{ getImage(news.imageName, 'article') | imagine_filter('news_sidebar') }}"
            />
        {% endif %}
        <div class="caption">
            <h3><a href="{{ path('app_core_bundle_article_news_item', {slug: news.slug}) }}">{{ news.title }}</a></h3>
            <div>
                {{ news.content|raw|length > 150 ? news.content[:150]|striptags ~ ' ...' : news.content|raw }}
            </div>
            <br />
            <p>
                <a href="{{ path('app_core_bundle_article_news_item', {slug: news.slug}) }}" class="btn btn-primary" role="button">{{ 'More detailed'|trans }}</a>
            </p>
        </div>
    </div>
{% endif %}
