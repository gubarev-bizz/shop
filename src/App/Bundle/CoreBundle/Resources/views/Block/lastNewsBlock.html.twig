<h2 class="block-title">НОВОСТИ</h2>
<div class="">
    <img
            alt="100%x200"
            data-src="holder.js/100%x200"
            style="height: 200px; width: 100%; display: block;"
            src="{{ getImage(news.imageName, 'article') }}"
            data-holder-rendered="true"
    >
    <div class="caption">
        <h3><a href="{{ path('app_core_bundle_article_news_item', {id: news.id}) }}">{{ news.title }}</a></h3>
        <div>
            {{ news.content|length > 150 ? news.content|slice(0, 150) ~ ' ...' : news.content }}
        </div>
        <br />
        <p>
            <a href="{{ path('app_core_bundle_article_news_item', {id: news.id}) }}" class="btn btn-primary" role="button">Подробней</a>
        </p>
    </div>
</div>