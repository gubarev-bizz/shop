{% extends '@AppCore/Layouts/layout.html.twig' %}

{% block page_title %}{{ entity.title }}{% endblock %}

{% block content %}

    <div class="row">
        {% if entity.imageName is not null %}
        <div class="col-md-5 img-article">
            {% set image = getImage(entity.imageName, 'article') %}

            {% if image is not null %}
                <img src="{{ getImage(entity.imageName, 'article') }}" data-holder-rendered="true" />
            {% endif %}
        </div>
        {% endif %}
        <div>
            {{ entity.content|raw }}
        </div>
    </div>

{% endblock %}

{% block seo %}
    {{ seo_render(entity.seoDescription, entity.seoTags, entity.title, app.request.uri) }}
{% endblock %}